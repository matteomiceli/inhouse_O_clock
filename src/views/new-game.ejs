<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="/css/style.css" rel="stylesheet" type="text/css">
    <title>Create Game</title>
</head>
<body>
    <nav class="navbar">

    </nav>
    <form action="game-results" id="game-form" method="POST"></form>
    <div class="container">
        <div class="game-bracket">
            <table class="game-table">
                <thead>
                    <tr>
                        <th>Red Team</th>
                        <th></th>
                        <th>Position</th>
                        <th></th>
                        <th>Blue Team</th>
                    </tr>
                </thead>
                <tbody><tr></tr>
                    <tr>
                        <td>
                            <select name="red-top" id="red-top" class="red-select" form="game-form">
                                <option disabled selected value>--</option>
                                <% for(i=0; i < players.length; i++) { %>
                            
                                    <option value='<%= players[i].alias %>'><%= players[i].alias %></option>
                                    
                                <% } %>
                             </select>
                        </td>
                        <!-- perhaps change red-scores and blu-scores to classes? -->
                        <td name="red-scores" id="red-top-score"></td>
                        <input type="hidden" name="red-top-value" id="red-top-value" form="game-form">
                        <td>
                            Top
                        </td>
                        <td name="blu-scores" id="blu-top-score"></td>
                        <input type="hidden" name="blu-top-value" id="blu-top-value" form="game-form">
                        <td>
                            <select name="blu-top" id="blu-top" class="blu-select" form="game-form">
                                <option disabled selected value>--</option>
                                <% for(i=0; i < players.length; i++) { %>
                            
                                    <option value='<%= players[i].alias %>'><%= players[i].alias %></option>
                                    
                                <% } %>
                             </select>
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <select name="red-jung" id="red-jung" class="red-select" form="game-form">
                                <option disabled selected value>--</option>
                                <% for(i=0; i < players.length; i++) { %>
                            
                                    <option value='<%= players[i].alias %>'><%= players[i].alias %></option>
                                    
                                <% } %>
                             </select>
                        </td>
                        <td name="red-scores" id="red-jung-score"></td>
                        <input type="hidden" name="red-jung-value" id="red-jung-value" form="game-form">
                        <td>
                            jung
                        </td>

                        <td name="blu-scores" id="blu-jung-score"></td>
                        <input type="hidden" name="blu-jung-value" id="blu-jung-value" form="game-form">
                        <td>
                            <select name="blu-jung" id="blu-jung" class="blu-select" form="game-form">
                                <option disabled selected value>--</option>
                                <% for(i=0; i < players.length; i++) { %>
                            
                                    <option value='<%= players[i].alias %>'><%= players[i].alias %></option>
                                    
                                <% } %>
                             </select>
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <select name="red-mid" id="red-mid" class="red-select" form="game-form">
                                <option disabled selected value>--</option>
                                <% for(i=0; i < players.length; i++) { %>
                            
                                    <option value='<%= players[i].alias %>'><%= players[i].alias %></option>
                                    
                                <% } %>
                             </select>
                        </td>
                        <td name="red-scores" id="red-mid-score"></td>
                        <input type="hidden" name="red-mid-value" id="red-mid-value" form="game-form">
                        <td>
                            mid
                        </td>

                        <td name="blu-scores" id="blu-mid-score"></td>
                        <input type="hidden" name="blu-mid-value" id="blu-mid-value" form="game-form">
                        <td>
                            <select name="blu-mid" id="blu-mid" class="blu-select" form="game-form">
                                <option disabled selected value>--</option>
                                <% for(i=0; i < players.length; i++) { %>
                            
                                    <option value='<%= players[i].alias %>'><%= players[i].alias %></option>
                                    
                                <% } %>
                             </select>
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <select name="red-adc" id="red-adc" class="red-select" form="game-form">
                                <option disabled selected value>--</option>
                                <% for(i=0; i < players.length; i++) { %>
                            
                                    <option value='<%= players[i].alias %>'><%= players[i].alias %></option>
                                    
                                <% } %>
                             </select>
                        </td>
                        <td name="red-scores" id="red-adc-score"></td>
                        <input type="hidden" name="red-adc-value" id="red-adc-value" form="game-form">
                        <td>
                            adc
                        </td>

                        <td name="blu-scores" id="blu-adc-score"></td>
                        <input type="hidden" name="blu-adc-value" id="blu-adc-value" form="game-form">
                        <td>
                            <select name="blu-adc" id="blu-adc" class="blu-select" form="game-form">
                                <option disabled selected value>--</option>
                                <% for(i=0; i < players.length; i++) { %>
                            
                                    <option value='<%= players[i].alias %>'><%= players[i].alias %></option>
                                    
                                <% } %>
                             </select>
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <select name="red-sup" id="red-sup" class="red-select" form="game-form">
                                <option disabled selected value>--</option>
                                <% for(i=0; i < players.length; i++) { %>
                            
                                    <option value='<%= players[i].alias %>'><%= players[i].alias %></option>
                                    
                                <% } %>
                             </select>
                        </td>
                        <td name="red-scores" id="red-sup-score"></td>
                        <input type="hidden" name="red-sup-value" id="red-sup-value" form="game-form">
                        <td>
                            sup
                        </td>
                        <td name="blu-scores" id="blu-sup-score"></td>
                        <input type="hidden" name="blu-sup-value" id="blu-sup-value" form="game-form">
                        <td>
                            <select name="blu-sup" id="blu-sup" class="blu-select" form="game-form">
                                <option disabled selected value>--</option>
                                <% for(i=0; i < players.length; i++) { %>
                            
                                    <option value='<%= players[i].alias %>'><%= players[i].alias %></option>
                                    
                                <% } %>     
                             </select>
                        </td>
                    </tr>
                    <tr>
                        <!-- append favoured element to this if red team favourite -->
                        <td id="red-side"></td>
                        <td id="red-total-score"></td>
                        <td>- VS -</td>
                        <td id="blu-total-score"></td>
                        <!-- append favoured element to this if blue team favourite -->
                        <td id="blue-side"></td>
                    </tr>
                </tbody>
            </table>
            <input type="hidden" name="red-prob" id="red-prob" form="game-form">
            <input type="hidden" name="blue-prob" id="blue-prob" form="game-form">
        </div>
        <div class="vict-buttons">
            <button id="red-victory">Red Team Victory</button>
            <button id="blue-victory">Blue Team Victory</button>
        </div>
        <br>
        <br>
        <div class="player-pool">
            <table class="player-pool-table">
                <thead>
                    <tr>
                        <th>Summoner</th>
                        <th>Top</th>
                        <th>Jungle</th>
                        <th>Mid</th>
                        <th>ADC</th>
                        <th>Support</th>
                        <th>W/L</th>
                    </tr>
                </thead>
                <tbody>
                    <% for(i=0; i < players.length; i++) { %>
                        <tr>
                          <td><%= players[i].alias %></td>
                          <td><%= players[i].posRatings.top %></td>
                          <td><%= players[i].posRatings.jung %></td>
                          <td><%= players[i].posRatings.mid %></td>
                          <td><%= players[i].posRatings.adc%></td>
                          <td><%= players[i].posRatings.sup %></td>
                          <td><%= players[i].wins %> / <%= players[i].losses %></td>
                        </tr>
                    <% } %>
                </tbody>
            </table>
        </div>
    </div>
    <div class="blue-modal">
        <img src="/img/close.svg" alt="close button" class="close-modal">
        <p>Confirm blue as winning Team?</p>
        <input type="submit" form="game-form" name="blue" value="Blue Victory">
        <!-- <button id="confirm-blue-victory">Confirm</button> -->
    </div>
    <div class="red-modal">
        <img src="/img/close.svg" alt="close button" name="win-blue" class="close-modal">
        <p>Confirm red as winning Team?</p>
        <input type="submit" form="game-form" name="win-red" value="Red Victory">
        <!-- <button id="confirm-red-victory">Confirm</button> -->
    </div>
    <style src=""></style>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="/js/newGame.js" type="text/javascript"></script>
</body>
</html>